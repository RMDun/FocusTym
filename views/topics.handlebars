<!doctype html>

<html>
<head>
	<title>{{name}}</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
	
		<link href="/css/focusTym.css" rel="stylesheet">
</head>

<body>
	<div class="container">
		<button class="btn" onclick="goBack()"><i class="fa fa-arrow-alt-circle-left"></i> Go Back</button> 
		<a id="settings" href="/settings"><button align="right" class="btn"" onclick=""><i class="fa fa-cog"></i>Settings</button></a> 
		
		<h1>{{name}}</h1>
		<hr class=a>
		<div>	
			<div style="width: 100%; display: table;">
			
			<div style="width: 100%; display: table;">
			<div class="btn btn-default friends" style="display: table-row">
		        <a id="add" href="/addTask/{{name}}">
		        <button class="btn">
		           <i class="fas fa-plus"></i>
		        </button></a>
		        Add Task
		   	</div>

			{{#each topics}}
			<div class="btn" style="width: 100%; display: table;">
		   	
				{{topic}}:{{time}}

				<button class="btn" id="like">
		        	<i class="glyphicon glyphicon-thumbs-up"></i>
		        </button>
				
				<a id="delete" href="/deleteTask/{{topic}}">
		        	<button class="btn" id="delete">
		        		<i class="fas fa-trash-alt"></i>
		        	</button>
		      	</a>

		        <a id="edit" href="/editTask/{{topic}}">
		        	<button class="btn" id="edit">
		           		<i class="fas fa-user-edit"></i>
		        	</button>
		        </a>
		        
		   </div>
		    {{/each}}
		    
		</div>
			</hr>
					
		<div>
			current topic:
		</div>
		<div>Equations | 3:27 </div>
		<button class="btn" id="play"><i class="fa fa-play"></i></button><button class="btn" id="pause"><i class="fa fa-pause"></i></button>	<a id="end topic" href="/endTopic"><button class="btn">end topic</button></a>
				
	</div>
	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/focusTym.js"></script>
</body>
</html>